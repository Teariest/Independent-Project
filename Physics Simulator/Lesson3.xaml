<Page
    x:Class="Physics_Simulator.Lesson3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Physics_Simulator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <!-- TITLE -->

        <TextBlock Style="{StaticResource LessonTitle}" Text="Dynamics: Forces"/>

        <!-- EXPLANATION -->

        <TextBlock Style="{StaticResource LessonExplanation}" Text="A force is like a push or pull, forces represent interactions between different objects.&#x0a; Forces are measured in Newtons, as forces were his invention. A newton is defined as N = ma, m is the mass of the object and a acceleration. N = (kg*m)/s^2. This way, we are able to see how objects of different masses are affected by the same force. Gravity is a force."/>

        <!-- SIMULATION -->

        <Frame Style="{StaticResource LessonSim}" Name="LessonSimFrame"/>
    </Grid>
</Page>
