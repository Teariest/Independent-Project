<Page
    x:Class="Physics_Simulator.Lesson2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Physics_Simulator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <!-- TITLE -->

        <TextBlock Style="{StaticResource LessonTitle}" Text="Basics of Kinematics: Acceleration"/>

        <!-- EXPLANATION -->

        <TextBlock Style="{StaticResource LessonExplanation}" Text="Acceleration represents change in velocity, a = &#x0394;v/&#x0394;t. Therefore, acceleration is the second derivative of position.&#x0a;Acceleration is measured in m/s^2."/>

        <!-- SIMULATION -->

        <Frame Style="{StaticResource LessonSim}" Name="LessonSimFrame"/>
    </Grid>
</Page>
