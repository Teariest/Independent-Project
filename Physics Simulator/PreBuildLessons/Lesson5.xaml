<Page
    x:Class="Physics_Simulator.Lesson5"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Physics_Simulator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <!-- TITLE -->

        <TextBlock Style="{StaticResource LessonTitle}" Text="Inelastic Collisions"/>

        <!-- EXPLANATION -->

        <TextBlock Style="{StaticResource LessonExplanation}" Text="Physics looks at interactions between objects, collisions are the most obvious examples of interaction between objects since we see the all the time.&#x0a;Inelastic collisions are between objects that do not bounce or get deformed in any way, picture objects with velcro. In such collisions the objects retain the total momentum. Momentum is defined as p = mv."/>

        <!-- SIMULATION -->

        <Frame Style="{StaticResource LessonSim}" Name="LessonSimFrame"/>
    </Grid>
</Page>
