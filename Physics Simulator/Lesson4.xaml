<Page
    x:Class="Physics_Simulator.Lesson4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Physics_Simulator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <!-- TITLE -->

        <TextBlock Style="{StaticResource LessonTitle}" Text="2D Kinematics:"/>

        <!-- EXPLANATION -->

        <TextBlock Style="{StaticResource LessonExplanation}" Text="2D kinematics aren't much more complex than in 1D, it simply takes twice the work.&#x0a;To work with 2D we must break down 2D vectors to separate scalars.&#x0a;If an object is moving at a 45 degree angle from the horizon at 10 m/s, we can find the individual x and y components of such a motion using trig functions. Example: vx = sin(angle) * magnitude, vy uses cosine."/>

        <!-- SIMULATION -->

        <Frame Style="{StaticResource LessonSim}" Name="LessonSimFrame"/>
    </Grid>
</Page>
